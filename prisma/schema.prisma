// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

model User {
  id            String       @id @default(cuid())
  name          String?
  email         String       @unique
  submissions   Submission[]
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

model Submission {
  id          String    @id @default(cuid())
  user        User?     @relation(fields: [userId], references: [id])
  userId      String?
  createdAt   DateTime  @default(now())
  email       String
  name        String
  points      Int       @default(0)

  // Men's selections
  menFirst    String?
  menSecond   String?
  menThird    String?
  
  // Women's selections
  womenFirst  String?
  womenSecond String?
  womenThird  String?

  @@unique([email])
}

model CompetitionResult {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  isActive    Boolean   @default(true)

  // Men's results
  menFirst    String?
  menSecond   String?
  menThird    String?
  
  // Women's results
  womenFirst  String?
  womenSecond String?
  womenThird  String?
}
